<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:contentDescription="@string/test_baidu_map"
        android:src="@drawable/baidumap" >
    </ImageView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chatRoomTips" />

    <EditText
        android:hint="@string/test_baidu_map_tip"
        android:id="@+id/test_baidu_map_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/test_baidu_map_yeah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_button_yes" />

        <Button
            android:id="@+id/test_baidu_map_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creat_chat_room" />

    </LinearLayout>

</LinearLayout>